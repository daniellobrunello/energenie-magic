{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "rules": {
        "max-len" : [2, 80],
        "indent": ["warn", 2],
        "linebreak-style": ["warn", "windows"],
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "no-console": "off",
        "no-unused-vars": "off",
        "no-undef" : "off"
    }
}